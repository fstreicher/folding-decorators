{
  "name": "folding-decorators",
  "displayName": "Folding Decorators",
  "description": "Custom folding ranges",
  "publisher": "fstreicher",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fstreicher/folding-decorators"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "galleryBanner": {
    "color": "#005f6a",
    "theme": "dark"
  },
  "icon": "icon.png",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "configuration": {
      "order": 10,
      "type": "object",
      "properties": {
        "folding-decorators.autoFold": {
          "type": "boolean",
          "scope": "application",
          "default": true,
          "description": "%settings.autoFold.desc%",
          "order": 10
        },
        "folding-decorators.decorators": {
          "type": "string",
          "scope": "application",
          "enum": [
            "all decorators",
            "custom regex"
          ],
          "default": "all decorators",
          "description": "%settings.decorators.desc%",
          "order": 20
        },
        "folding-decorators.customSelector": {
          "type": "string",
          "scope": "application",
          "description": "%settings.customSelector.desc%",
          "order": 30
        },
        "folding-decorators.activationDelay": {
          "type": "integer",
          "scope": "application",
          "default": 1000,
          "description": "%settings.activationDelay.desc%",
          "order": 40
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vscode/test-web": "^0.0.29",
    "assert": "^2.0.0",
    "eslint": "^8.22.0",
    "process": "^0.11.10",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack-cli": "^4.10.0",
    "webpack": "^5.74.0"
  }
}